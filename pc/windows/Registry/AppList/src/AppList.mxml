<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Script>
		<![CDATA[
			import com.chocbanana.win.AppListExtension;
			import mx.collections.ArrayList;
			
			[Bindable]
			private var ar:ArrayList;
			
			protected function btn_appList_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				var ane:AppListExtension = new AppListExtension();
				var _ar:Array = ane.getAppList();
				ar = new ArrayList();
				
				for(var i:int=0; i<_ar.length; i++){
					ar.addItem(_ar[i]);
				}
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- 非ビジュアルエレメント (サービス、値オブジェクトなど) をここに配置 -->
	</fx:Declarations>
	<s:Panel x="0" y="0" width="100%" height="100%" title="Application List">
		<s:VGroup x="0" y="0" width="100%" height="100%" horizontalAlign="center"
				  verticalAlign="middle">
			<s:List width="85%" height="85%" dataProvider="{ar}"></s:List>
			<s:Button id="btn_appList" label="Get Installed Application List"
					  click="btn_appList_clickHandler(event)"/>
		</s:VGroup>
	</s:Panel>
</s:WindowedApplication>
