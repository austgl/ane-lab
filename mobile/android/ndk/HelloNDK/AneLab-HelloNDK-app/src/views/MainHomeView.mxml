<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark" title="ANE NDK">

	<fx:Script>
		<![CDATA[
			import com.example.extension.context.HelloNdkExtensionContext;
			protected function button1_clickHandler(event:MouseEvent):void
			{
				var ane:HelloNdkExtensionContext = new HelloNdkExtensionContext();
				result.text = ane.helloNDK();
			}
		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	<s:Label id="result" />
	<s:Button label="Call Native" click="button1_clickHandler(event)"/>
</s:View>
